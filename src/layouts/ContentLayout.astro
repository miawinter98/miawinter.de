---
import Layout from "./Layout.astro";

interface Props {
	title: string;
	description?: string;
	header?: string;
}

const { title, description, header } = Astro.props;
---

<Layout title={title} description={description} header={header}>
    <div class="bg-base-200 transition-colors ease-linear duration-300">
        <main class="prose bg-base-100 text-base-content">
            <h1>{ title }</h1>

            <slot />
        </main>
    </div>
</Layout>
