---
import {Image} from 'astro:assets';

import CardLayout from 'layouts/CardLayout.astro';
import ProjectCard from "shared/ProjectCard.astro";
import SidebarCard from "shared/SidebarCard.astro";
import CoolButton from "shared/CoolButton.astro";
import PgpKey from "core/PgpKey.astro";
---

<CardLayout title="Mia Rose Winter" cards="Projects"
			header="Loves to manage projects, forced to build software. Cat Woman ADHD and way too many projects.">
	<ProjectCard eagerLoading={true}
				title="winter-software.com"
				tagLine="My Portfolio Website"
				description="You can find all my software and web projects there, as well as some other goodies"
				image="/src/assets/winter-software.com.png">
		<CoolButton label="Go To Site" url="https://winter-software.com" eagerLoading={true}
					favicon="https://winter-software.com/favicon-32x32.png"/>
	</ProjectCard>
	<ProjectCard eagerLoading={true}
				title="miawinter.de"
				tagLine="This site"
				description="Yep"
				image="/src/assets/miawinter.de.png">
