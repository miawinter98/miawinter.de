---
const {pathname} = Astro.url;

import ProfilePicture from "/src/assets/profile_picture.png"
import {Image} from "astro:assets";

const urlSegment = pathname.replaceAll('/', '');
---

<header class="bg-primary text-primary-content relative">
    <div class="p-4 md:px-12 flex flex-col items-center md:flex-row gap-8">
        <figure class="w-40 rounded-full overflow-hidden">
            <Image src={ProfilePicture} widths={[600, 200, ProfilePicture.width]}
                   alt="Mia Rose Winters current profile picture, likely a picrew"
                   loading="eager"/>
        </figure>

        <div class="">
            <p><strong class="text-3xl font-bold">Mia Rose Winter</strong></p>
            <p class="font-bold my-1" title="pronouns: she/her">She/Her</p>
            <p><slot/></p>
        </div>
    </div>

    <nav role="navigation" class="text-lg" aria-label="Navigation">
        <ul class="flex justify-center w-full *:max-md:flex-1">
            <li class:list={['flex border-b-4 w-40 text-center', {'border-neutral': (urlSegment.length < 1)}, {'border-transparent': (urlSegment.length >= 1)}]}>
                <a class="w-full h-full" href="/">
                    Home
                </a>
            </li>
            <li class:list={['flex border-b-4 w-40 text-center', {'border-neutral': urlSegment.endsWith('books')}, {'border-transparent': !urlSegment.endsWith('books')}]}>
                <a class="w-full h-full" href="/books">
                    Books
                </a>
            </li>
            <li class:list={['flex border-b-4 w-40 text-center', {'border-neutral': urlSegment.endsWith('writing')}, {'border-transparent': !urlSegment.endsWith('writing')}]}>
                <a class="w-full h-full" href="/writing">
                    Writing <span class="hidden sm:inline">Exercises</span>
                </a>
            </li>
        </ul>
    </nav>

    <button id="ThemeToggle" type="button" aria-hidden="true" tabindex="-1"
            class="bg-secondary text-secondary-content absolute top-4 right-4 p-2 rounded-full cursor-pointer"
            title="toggle website dark theme">
        <span class="dark:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                <path d="M12 2.25a.75.75 0 0 1 .75.75v2.25a.75.75 0 0 1-1.5 0V3a.75.75 0 0 1 .75-.75ZM7.5 12a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM18.894 6.166a.75.75 0 0 0-1.06-1.06l-1.591 1.59a.75.75 0 1 0 1.06 1.061l1.591-1.59ZM21.75 12a.75.75 0 0 1-.75.75h-2.25a.75.75 0 0 1 0-1.5H21a.75.75 0 0 1 .75.75ZM17.834 18.894a.75.75 0 0 0 1.06-1.06l-1.59-1.591a.75.75 0 1 0-1.061 1.06l1.59 1.591ZM12 18a.75.75 0 0 1 .75.75V21a.75.75 0 0 1-1.5 0v-2.25A.75.75 0 0 1 12 18ZM7.758 17.303a.75.75 0 0 0-1.061-1.06l-1.591 1.59a.75.75 0 0 0 1.06 1.061l1.591-1.59ZM6 12a.75.75 0 0 1-.75.75H3a.75.75 0 0 1 0-1.5h2.25A.75.75 0 0 1 6 12ZM6.697 7.757a.75.75 0 0 0 1.06-1.06l-1.59-1.591a.75.75 0 0 0-1.061 1.06l1.59 1.591Z"/>
            </svg>
        </span>
        <span class="hidden dark:inline">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                    <path fill-rule="evenodd"
                          d="M9.528 1.718a.75.75 0 0 1 .162.819A8.97 8.97 0 0 0 9 6a9 9 0 0 0 9 9 8.97 8.97 0 0 0 3.463-.69.75.75 0 0 1 .981.98 10.503 10.503 0 0 1-9.694 6.46c-5.799 0-10.5-4.7-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 0 1 .818.162Z"
                          clip-rule="evenodd"/>
                </svg>
            </span>
    </button>
</header>

<script>
    const toggle = document.getElementById("ThemeToggle");

    if (toggle) {
        toggle.addEventListener("click", function () {
            let theme = document.documentElement.dataset.theme;
            if (theme === "dark") {
                document.documentElement.dataset.theme = "light";
                localStorage.theme = "light";
            } else {
                document.documentElement.dataset.theme = "dark";
                localStorage.theme = "dark";
            }
        })
    }
</script>