---

interface Props {
    title: string;
    description: string;
    release: string;
}

const { title, description, release } = Astro.props;
---

<article class="w-full md:max-w-60 aspect-[2/3] bg-primary text-primary-content p-4 rounded-sm">
    <div class="flex flex-col h-full">
        <h3 class="text-lg font-bold mb-6 capitalize">{title}</h3>
        <div class="flex-1">
            <p>{description}</p>
        </div>
        <slot />
        <p class="text-end mt-6">
            <time datetime={release}>
                {new Date(Date.parse(release)).toLocaleDateString()}
            </time>
        </p>
    </div>
</article>
